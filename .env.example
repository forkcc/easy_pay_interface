# =============================================
# Easy Pay Docker Compose 环境变量
# 复制为 .env 并按需修改
# cp .env.example .env
# =============================================

# ---------- PostgreSQL ----------
PG_PASSWORD=postgres
PG_EXTERNAL_PORT=5432

# ---------- Redis ----------
REDIS_PASSWORD=
REDIS_EXTERNAL_PORT=6379

# ---------- ZooKeeper ----------
ZK_EXTERNAL_PORT=2181

# ---------- Dubbo ----------
DUBBO_TOKEN=easy-pay-secret-token
DUBBO_EXTERNAL_PORT=20880

# ---------- Task ----------
TASK_ENABLED=true

# ---------- JVM (可选) ----------
# PROVIDER_JAVA_OPTS=-Xms512m -Xmx1g
# TASK_JAVA_OPTS=-Xms256m -Xmx512m
